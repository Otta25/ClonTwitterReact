<div class="card border-0 px-2 card-css">
  <ul class="list-group list-group-flush container">
    <li class="p-3"><h4 class="fw-bolder">Who to follow</h4></li>
    <% for (let i = 0; i < 5; i++) { %>
      <% const user = users[Math.floor(Math.random()*users.length)]; %>
      <li class="pb-2 ps-2">
        <div class="d-flex align-items-center ms-1">
          <img class="me-3 p-1" src="/public/img/2fc67ba844840bcd35d358b00.jpeg" alt="" />
          <div>
            <% console.log(user)%>
            <a href="/usuarios/<%=user.username%>" class="mb-0 fw-bold text-dark"><%= user.firstname %> <%= user.lastname %></a>
            <p class="mb-0 font-grey">@<%= user.username %></p>
          </div>
          <a href="#" class="btn ms-auto me-1 rounded-pill btn-skyblue">Follow</a>
        </div>
      </li>
    <% } %>
  </ul>
</div>
